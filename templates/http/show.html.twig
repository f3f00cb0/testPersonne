{% extends 'base.html.twig' %}

{% block title %}Toutes les personnes {% endblock %}

{% block body %}
<style>
    .wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
</style>

<div class="wrapper">
    <a href="/">Enregistrer une nouvelle personne</a>

    {% for personne in personnes %}
        <p>{{ personne.nom }} {{ personne.prenom }} {{ personne.getAge() }}</p>
    {% endfor %}
</div>
{% endblock %}
